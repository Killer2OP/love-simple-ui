{
  "name": "love-simple-ui",
  "version": "1.0.26",
  "description": "An open-source UI library for developers to make their life easier :)",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/thekavikumar/love-simple-ui.git"
  },
  "homepage": "https://love-simple-ui.vercel.app/",
  "size-limit": [
    {
      "limit": "1 s",
      "path": "dist/index*.js",
      "import": "{ createComponent }"
    }
  ],
  "scripts": {
    "test": "jest",
    "ladle": "ladle serve",
    "build": "tsup && size-limit",
    "start": "tsup --watch"
  },
  "keywords": [
    "react",
    "react-components",
    "react-ui",
    "ui-components",
    "components"
  ],
  "author": "Kavi Kumar",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "exports": {
    "./package.json": "./package.json",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@babel/core": "^7.22.5",
    "@babel/preset-env": "^7.22.5",
    "@babel/preset-flow": "^7.22.5",
    "@babel/preset-react": "^7.22.5",
    "@babel/preset-typescript": "^7.22.5",
    "@ladle/react": "^2.12.3",
    "@size-limit/preset-big-lib": "^8.2.6",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^14.0.0",
    "@types/jest": "^29.5.2",
    "@types/react": "^18.2.1",
    "@types/react-dom": "^18.2.2",
    "autoprefixer": "^10.4.14",
    "babel-jest": "^29.5.0",
    "clsx": "^1.2.1",
    "goober": "^2.1.13",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.5.0",
    "jest-environment-jsdom": "^29.5.0",
    "ladle": "^0.0.0",
    "postcss": "^8.4.24",
    "react": "^18.2.0",
    "react-helmet": "^6.1.0",
    "react-dom": "^18.2.0",
    "size-limit": "^8.2.6",
    "tailwindcss": "^3.3.2",
    "tailwind-merge": "^1.13.2",
    "ts-jest": "^29.1.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4"
  },
  "peerDependencies": {
    "react": "^16.8 || ^17 || ^18",
    "react-dom": "^16.8 || ^17 || ^18"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "transform": {
      "^.+\\.tsx?$": "ts-jest",
      "^.+\\.jsx?$": "babel-jest"
    },
    "transformIgnorePatterns": [
      "/node_modules/",
      "\\.css$"
    ],
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.tsx?$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env",
      "@babel/preset-react",
      "@babel/preset-flow"
    ]
  },
  "bugs": {
    "url": "https://github.com/thekavikumar/love-simple-ui/issues"
  }
}
